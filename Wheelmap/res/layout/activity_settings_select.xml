	android:layout_height="fill_parent">

	<LinearLayout android:id="@+id/title_bar_logo" style="@style/ActionBarCompat">

	</LinearLayout>
	<LinearLayout android:id="@+id/title_bar_text" style="@style/ActionBarSwitcher"
		android:background="@drawable/bar_gradient_dark_grey">
